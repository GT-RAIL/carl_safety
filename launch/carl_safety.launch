<launch>
  <arg name="use_teleop_safety" default="false" />
  <arg name="enable_audible_warnings_arm" default="false" />
  <arg name="enable_audible_warnings_tipping" default="false" />

  <node pkg="carl_safety" type="nav_safety" name="nav_safety" output="screen">
    <param name="use_teleop_safety" type="bool" value="$(arg use_teleop_safety)" />
  </node>
  <node pkg="carl_safety" type="arm_safety" name="arm_safety" output="screen">
    <param name="enable_audible_warnings" type="bool" value="$(arg enable_audible_warnings_arm)" />
  </node>
  <node pkg="carl_safety" type="teleop_safety" name="teleop_safety" output="screen" />
  <node pkg="carl_safety" type="tipping_safety" name="tipping_safety" output="screen">
    <param name="enable_audible_warnings" type="bool" value="$(arg enable_audible_warnings_tipping)" />
  </node>
</launch>
